.screen {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 10rpx;
  padding-left: 10rpx;
  display: grid;
  grid-template-columns: auto auto auto;
  grid-template-rows: 64rpx;
  background: #fff;
}
.search {
  /* width: 100%; */
  height: 64rpx;
  border-radius: 20rpx;
  border: solid 1rpx #00000024;
  position: relative;
}
.searchIcon {
  font-size: 30rpx;
  padding: 20rpx;
  position: absolute;
  top: 50%;
  left: 0rpx;
  transform: translate(0, -50%);
}
.searchInput {
  width: 100%;
  box-sizing: border-box;
  padding-left: 70rpx;
  height: 100%;
  border: none;
}
.picker {
  padding: 12rpx 10rpx;
  border-radius: 20rpx;
  text-align: center;
  margin: 0 10rpx;
}
.picker:last-child {
  margin-right: 0rpx;
}
.sortIcon {
  padding-left: 4rpx;
}
