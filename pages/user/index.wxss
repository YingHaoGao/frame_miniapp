/**index.wxss**/
.container {
  padding: 0rpx;
}
.cover {
  width: 100%;
  height: 369rpx;
}
.cover_img {
  width: 100%;
  height: 100%;
}
.intro, .works {
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  position: relative;
}
.intro {
  /* padding-top: 180rpx; */
}
.intro_left {
  display: inline-block;
  width: 100%;
  padding-left: 20rpx;
  padding-right: 20rpx;
  transform: translate(0, -90rpx);
  box-sizing: border-box;
}
.intro_avater {
  width: 156rpx;
  height: 156rpx;
  border-radius: 50%;
  position: relative;
}
.intro_avater_img {
  width: 148rpx;
  height: 148rpx;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 10;
}
.intro_name {
  font-size: 50rpx;
  padding-bottom: 20rpx;
  font-weight: 500;
  width: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.intro_abstract {
  font-size: 30rpx;
  color: rgb(126, 126, 126);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
}
.intro_right {
  display: inline-block;
  width: 300rpx;
  position: absolute;
  top: 27rpx;
  right: 0rpx;
  box-sizing: border-box;
  padding-right: 20rpx;
  text-align: right;
}
.intro_setdata {
  padding: 10rpx 30rpx;
  border-radius: 52rpx;
  background: rgb(0, 170, 255);
  color: #fff;
  font-size: 26rpx;
  font-weight: 400;
  margin-bottom: 20rpx;
  display: inline-block;
}
.intro_data {
  width: 100%;
  padding: 30rpx 0rpx;
  transform: translate(0, -30rpx);
  padding-bottom: 10rpx;
}
.intro_data_item {
  width: 25%;
  display: inline-block;
  text-align: center;
}
.intro_data_item_num {
  font-size: 50rpx;
  font-weight: 500;
}
.intro_data_item_title {
  color: rgb(126, 126, 126);
  font-size: 30rpx;
}
.works_item:first-child {
  /* padding-top: 0rpx; */
}
.works_item {
  width: 100%;
  position: relative;
  padding: 30rpx 0rpx;
}
.works_item_label {
  position: absolute;
  top: 50%;
  right: 80rpx;
  transform: translate(0, -50%);
  padding: 4rpx 18rpx;
  border-radius: 18rpx;
  font-size: 20rpx;
}
.works_item_icon {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.works_item_title {
  padding-left: 20rpx;
  font-size: 30rpx;
  color: rgb(126, 126, 126);
  vertical-align: middle;
  font-weight: 500;
}
.works_item_right {
  width: 16rpx;
  height: 28rpx;
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform: translate(0, -50%);
}